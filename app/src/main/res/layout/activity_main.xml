<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentLayout"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAlertDialog"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="#4CAF50"
        android:elevation="5dp"
        android:text="Regular alert dialog"
        android:textAllCaps="false"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnAlertDialogSingleChoice"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAlertDialog"
        android:layout_centerInParent="true"
        android:backgroundTint="#4CAF50"
        android:elevation="5dp"
        android:text="Single choice Dalert dialog"
        android:textAllCaps="false"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnAlertDialogMultiChoice"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAlertDialogSingleChoice"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#4CAF50"
        android:elevation="5dp"
        android:text="Multi choice alert dialog"
        android:textAllCaps="false"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAlertDialog" />
</RelativeLayout>